<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/color_f1f4f6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8.5dp"
        android:paddingLeft="15dp"
        android:paddingBottom="8.5dp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            tools:background="@drawable/noimg_sexless"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_2c2c2c"
                    android:textStyle="bold"
                    tools:text="꼰듀esfp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="@color/color_2c2c2c"
                    android:textStyle="bold"
                    tools:text=", "
                    />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="@color/color_2c2c2c"
                    android:textStyle="bold"
                    tools:text="33"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/you_chatbox"
                android:gravity="center"
                android:maxWidth="270dp"
                android:includeFontPadding="false"
                android:layout_marginTop="4.3dp"
                android:minWidth="40dp"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="2.7sp"
                android:padding="13.3dp"
                android:text="좋아요! 송정 어디로 갈까요?"
                android:textColor="#848d91"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="7.7dp"
            android:layout_marginBottom="2dp"
            android:gravity="end"
            android:includeFontPadding="false"
            android:textColor="#99848d91"
            android:textSize="10dp"
            tools:text="오후 8:09" />
    </LinearLayout>
</LinearLayout>