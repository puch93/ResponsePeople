<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:fadingEdge="none"
        android:overScrollMode="never">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <FrameLayout
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/btn_back" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/color_2a3348"
                        android:textSize="16dp"
                        tools:text="꼰듀esfp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text=","
                        android:textColor="@color/color_2a3348"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/color_2a3348"
                        android:textSize="16dp"
                        tools:text="33" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/btn_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/btn_setting" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f3f4f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:paddingRight="15dp"
                android:paddingBottom="24.3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_img"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/mypage_profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/icon_mypage_star" />

                            <TextView
                                android:id="@+id/score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8.7dp"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_2c2c2c"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                tools:text="8.56" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/job_top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_848d91"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                tools:text="회사원" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text=" · "
                                android:textColor="@color/color_848d91"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_848d91"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                tools:text="서울" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text=" · "
                                android:textColor="@color/color_848d91"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/salary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_848d91"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                tools:text="5000만원 미만" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <FrameLayout
                    android:id="@+id/btn_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="76dp"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/btn_profile_edit" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/icon_profile_edit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.7dp"
                            android:includeFontPadding="false"
                            android:text="프로필 수정"
                            android:textColor="@color/color_669cff"
                            android:textSize="13.2dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/count_receive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:includeFontPadding="false"
                            android:textColor="@color/color_669cff"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:text="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:includeFontPadding="false"
                            android:text="받은 질문"
                            android:textColor="#3c4449"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/color_e3e6e8" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/count_response"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:includeFontPadding="false"
                            android:textColor="@color/color_669cff"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:text="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:includeFontPadding="false"
                            android:text="응답한 질문"
                            android:textColor="#3c4449"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.7dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/heart_box" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="21.3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내 보유 하트"
                            android:textColor="#3c4449"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="66.7" />


                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icon_h_heart" />

                        <TextView
                            android:id="@+id/count_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/color_2c2c2c"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:text="0" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="24.7" />


                        <TextView
                            android:id="@+id/btn_charge"
                            android:layout_width="75dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_charge"
                            android:gravity="center"
                            android:text="충전 >"
                            android:textColor="@color/color_white"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15" />

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ebedef" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/color_f6f8f9" />


            <LinearLayout
                android:id="@+id/menu_tier"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="9dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_type" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.7dp"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="내 프로필 등급"
                    android:textColor="@color/color_2c2c2c"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/icon_tier"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    tools:src="@drawable/icon_gold" />


                <TextView
                    android:id="@+id/tier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="9dp"
                    android:textColor="#cc95989d"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    tools:text="골드" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/btn_more_2" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ebedef" />

            <LinearLayout
                android:id="@+id/menu_prefer"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="9dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_type" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.7dp"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="선호 설정"
                    android:textColor="@color/color_2c2c2c"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/btn_more_2" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ebedef" />

            <LinearLayout
                android:id="@+id/menu_like"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="9dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_fav" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.7dp"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="나를 찜한 사람"
                    android:textColor="@color/color_2c2c2c"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/btn_more_2" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ebedef" />


            <LinearLayout
                android:id="@+id/menu_block"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="9dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_block" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.7dp"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="지인 만나지 않기"
                    android:textColor="@color/color_2c2c2c"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/btn_more_2" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ebedef" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/color_f6f8f9" />


            <LinearLayout
                android:id="@+id/menu_customer"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="9dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="고객센터"
                    android:textColor="@color/color_848d91"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/btn_more_2" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ebedef" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="133.7dp"
                android:background="@color/color_f6f8f9" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>