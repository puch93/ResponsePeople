<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15.7dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/noimg_sexless" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.7dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_2c2c2c"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    tools:text="꼰듀esfp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:includeFontPadding="false"
                    android:text=", "
                    android:textColor="@color/color_2c2c2c"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_2c2c2c"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    tools:text="33" />
            </LinearLayout>

            <TextView
                android:id="@+id/contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.3dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:singleLine="true"
                android:textColor="#848d91"
                android:textSize="11sp"
                tools:text="저랑 송정 맛집 가실래여? 맥주한잔 크으~" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/send_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99848d91"
                android:textSize="10dp"
                tools:text="오후 8:09" />

            <TextView
                android:id="@+id/unread_count"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="right"
                android:layout_marginTop="6.7dp"
                android:background="@drawable/alarm_bg"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="5.7dp"
                android:paddingRight="5.7dp"
                android:text="3"
                android:textColor="@color/color_white"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eceeef"/>
</LinearLayout>