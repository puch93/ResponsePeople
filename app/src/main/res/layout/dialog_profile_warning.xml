<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="@color/color_c4c8cc">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="276.7" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="363.3dp"
            android:background="@drawable/sel_round_background_top"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="#2a3348"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    tools:text="꼰듀esfp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="님의"
                    android:textColor="#2a3348"
                    android:textSize="24dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:text="프로필을 보시겠어요?"
                android:textColor="#2a3348"
                android:textSize="24dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="145dp"
                android:layout_height="32dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/heart_sky_bg"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="하트 5개를 사용합니다" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_c4c8cc"
                    android:gravity="center"
                    android:text="닫기"
                    android:textColor="@color/color_white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_669cff"
                    android:gravity="center"
                    android:text="보기"
                    android:textColor="@color/color_white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>