<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_669cff</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/color_669cff</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- dialog activity set -->
    <style name="ActivityDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--        <item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyAppTheme.NumberPicker" parent="AppTheme">
        <item name="colorControlNormal">@color/color_e9e7eb</item>
        <item name="android:textColorPrimary">@color/color_132439</item>
        <item name="android:textColorHighlight">@color/color_132439</item>
        <item name="android:textSize">27dp</item>
    </style>

    <style name="MyAppTheme.DatePicker" parent="AppTheme">
        <item name="colorControlNormal">@color/color_e9e7eb</item>
        <item name="android:textColorPrimary">@color/color_132439</item>
        <item name="android:textColorHighlight">@color/color_132439</item>
        <item name="android:textSize">27dp</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_stars</item>
    </style>
</resources>
